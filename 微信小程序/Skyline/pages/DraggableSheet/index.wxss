.sheet {
  width: 100vw;
  height: 70vh;
  background-color: rgb(99, 214, 124);
  border-radius: 40rpx 40rpx 0 0;
  overflow: hidden;
  position: absolute;
  bottom: 0;
}

.scroll {
  height: 100%;
}

.bar {
  background: rgb(179, 85, 82);
  width: 100vw;
  height: env(safe-area-inset-bottom);
  box-shadow: 0px -3px 0 1px rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
}

.indicator {
  background-color: rgb(190, 186, 186);
  border-radius: 6rpx;
  height: 8rpx;
  width: 160rpx;
}