{
    "files": ["./001.hello.ts","./002.基本类型.ts","./005.泛型.ts"], //用来指定哪些ts文件需要编译
    "include": ["./003.编译配置文件/**/*","./004.类_Class/**/*"], //用来指定哪些ts文件需要编译
    "exclude": ["./003.编译配置文件/不需要编译/**/*"], //用来指定哪些目录下的ts文件不需要编译
    // 全部配置查看 https://www.typescriptlang.org/zh/tsconfig#compilerOptions
    "compilerOptions": {
        // 指定Ts编译后的ES版本
        // 可选值 :   'es3', 'es5', 'es6', 'es2015', 'es2016', 'es2017', 'es2018', 'es2019', 'es2020', 'es2021', 'es2022', 'esnext'
        "target": "es2015",
        // 指定使用模块化的规范
        // 可选值 :  'none', 'commonjs', 'amd', 'system', 'umd', 'es6', 'es2015', 'es2020', 'es2022', 'esnext', 'node16', 'nodenext'
        "module": "es2015",
        // 指定项目中要使用的库(一般不需要使用,除非有特殊要求)
        // "lib":[],
        // 指定编译后文件所在目录
        "outDir": "./",
        // 把全部Ts文件合并成一个
        // "outFile": "./app.js"
        // 是否对js文件进行编译，默认是false
        // "allowJs": true,
        // 是否对js代码检查规范，默认是false
        // "checkJs": true,
        // 是否移除注释
        "removeComments": true,
        // 不生成编译文件,默认值false
        "noEmit": false,
        // 当有错误时不生成编译文件
        "noEmitOnError": false,
        // 所有严格检查的总开关,优先级比下面的高
        "strict": true,
        // 用于设置编译后代码是否为严格模式代码(有利于提升性能),默认值false
        "alwaysStrict": true,
        // 不允许隐式any类型
        "noImplicitAny": true,
        // 不允许不明确类型this
        "noImplicitThis": true,
        // 严格检查空值
        "strictNullChecks": true,
    }
}